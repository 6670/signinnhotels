
@using (Html.BeginForm("index", "home", FormMethod.Post, new { id = "completeForm" }))
{
        <div class="col-lg-12 col-md-12">
            <div class="room_book">
                <h6>Book Your</h6>
                <p>Rooms</p>
            </div>
        </div>
        <div class="form-group col-lg-12 col-md-12">
            <input placeholder="Your Email Id *" data-validation="email" id="CustomerEmail" name="CustomerEmail" type="text" class="email_input">
        </div>
        <div class="form-group col-lg-12 col-md-12">
            <div class="input-group border-bottom-dark-2">
                <input class="date-picker" id="datepicker" name="CustomerArivalTime" placeholder="Arrival" type="text" />
                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
            </div>
        </div>
        <div class="form-group col-lg-12 col-md-12">
            <div class="input-group border-bottom-dark-2">
                <input class="date-picker" id="datepicker1" name="CustomerDepartureTime" placeholder="Departure" type="text" />
                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12">
            <div class="row">
                <div class="form-group col-lg-6 col-md-6">
                    <div class="input-group border-bottom-dark-2">
                        <input placeholder="Your Phone No," data-validation="ukphone" id="CustomerPhone" name="CustomerPhone" type="text" class="email_input">

                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-6 icon_arrow">
                    <div class="input-group border-bottom-dark-2">
                        <select class="form-control" name="TotalGuests" data-validation="required" id="room">
                            <option selected="selected">No. of Guests</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">5+</option>
                        </select>
                    </div>
                </div>
                @*<div class="form-group col-lg-6 col-md-6 icon_arrow">
                    <div class="input-group border-bottom-dark-2">
                        <select class="form-control" name="room" id="adult">
                            <option selected="selected" disabled="disabled">1 Adult</option>
                            <option value="Single">1 Adult</option>
                            <option value="Double">2 Adult</option>
                            <option value="Deluxe">3 Adult</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-6 icon_arrow">
                    <div class="input-group border-bottom-dark-2">
                        <select class="form-control" name="room" id="child">
                            <option selected="selected" disabled="disabled">1 Child</option>
                            <option value="Single">1 Child</option>
                            <option value="Double">2 Child</option>
                            <option value="Deluxe">3 Child</option>
                        </select>
                    </div>
                </div>*@
            </div>
        </div>
        <div class="col-lg-12 col-md-12">
            <input type="submit" class="btn btn-primary floatright" value="Book" />

        </div>
}