
@{
    ViewBag.Title = "Who we are?";
    Layout = "~/Views/Shared/_LayoutAboutUs.cshtml";

}

      <!-- start breadcrumb -->
<section class="breadcrumb_main_area margin-bottom-30">
    <div class="container-fluid">
        <div class="row">
            <div class="breadcrumb_main nice_title">
                <h2>About US</h2>
                <!-- special offer start -->
                <div class="special_offer_main">
                    <div class="container">
                        <div class="special_offer_sub">
                            <img src=@Url.Content("~/content/img/special-offer-yellow-main.png") alt="img">
                        </div>
                    </div>
                </div>
                <!-- end offer start -->
            </div>
        </div>
    </div>
</section>
<!-- end breadcrunb -->
<!-- start our room facilities -->
<section class="our_room_facilities_area">
    <div class="container">
        <div class="our_room_facilities margin-bottom-70">
            <div class="facilities_top_para">
                <p>
                    Situated in the heart of Pokhara, Sign Inn Hotel offers leisure and business travelers’ dependability, friendly services and modern, attractive facilities at an excellent value in a convenient and peaceful location. We provide innovative comfort to guests, whether on business or leisure while you stay connected with free Wi-Fi.
                </p>
            </div>
            <div class="facilities_main_part">
                <div class="section_title margin-top-80 margin-bottom-35">
                    <h5>Our Room Facilities</h5>
                </div>
                <div class="row">
                    <div class="facilities_name clearfix margin-bottom-45">
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                            <ul class="single_facilities_name clearul">
                                <li>
                                    <img src=@Url.Content("~/content/img/home-facilities-icon-one.png") alt="">
                                    <p>Breakfast</p>
                                </li>
                                <li>
                                    <img src=@Url.Content("~/content/img/home-facilities-icon-four.png") alt="">
                                    <p>Room service</p>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                            <ul class="single_facilities_name clearul">
                                <li>
                                    <img src=@Url.Content("~/content/img/home-facilities-icon-eight.png") alt="">
                                    <p>Free Parking</p>
                                </li>
                                <li>
                                    <img src=@Url.Content("~/content/img/home-facilities-icon-five.png") alt="">
                                    <p>TV LCD</p>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                            <ul class="single_facilities_name clearul border-right-whitesmoke">
                                <li>
                                    <img src=@Url.Content("~/content/img/home-facilities-icon-three.png") alt="">
                                    <p>Pet allowed</p>
                                </li>
                                <li>
                                    <img src=@Url.Content("~/content/img/home-facilities-icon-twelve.png") alt="">
                                    <p>Wi-fi service</p>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-1 col-xs-12">
                            <div class="single_facilities_name clearfix">
                                <a href="#" class="btn btn-warning btn-md">Book Room</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="about_us_thumb margin-bottom-40">
                            <div class="col-sm-3 col-xs-6">
                                <img src=@Url.Content("~/content/img/room-image-ten.jpg") alt="">
                            </div>
                            <div class="col-sm-3 col-xs-6">
                                <img src=@Url.Content("~/content/img/showcase-slider-four.jpg") alt="">
                            </div>
                            <div class="col-sm-3 col-xs-6">
                                <img src=@Url.Content("~/content/img/showcase-slider-three.jpg") alt="">
                            </div>
                            <div class="col-sm-3 col-xs-6">
                                <img src=@Url.Content("~/content/img/room-image-fifteen.png") alt="">
                            </div>
                            <div class="clearfix"></div>
                            <p>
                                Sign Inn Hotel boasts stunning views of the Annapurna & Machapuchre Himal (Mountain) as well as easy access to the thriving Lake Street with just 5 minutes’ walk from hotel to Lake side. Some of the rooms as well offers stunning views of Phewa Lake.
                            </p>
                            <p>
                                We are just 10 minutes drive from Pokhara Airport as well as from City Center. For adventure enthusiasts, we are just 30 minutes drive from Sarangkot where guest could go for stunning sight seeing of Pokhara as well as for Paragliding. Our location has the easy and convenient access to all the attractions and adventures hub in Pokhara.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end our room facilities -->
